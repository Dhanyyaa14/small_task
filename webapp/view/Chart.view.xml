<mvc:View
    controllerName="my.app.controller.Chart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">

    <Page title="Sales Chart" showNavButton="true" navButtonPress="onNavBack">
        <viz:Popover id="idPopOver" />
        
        <viz:VizFrame 
            id="idVizFrame"
            height="500px"
            width="100%"
            vizType="bar">
        </viz:VizFrame>
        
        <Button id="backButton" text="Back" press="onNavBack" />
    </Page>
</mvc:View>